<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/episodesCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="10dp"
        android:elevation="5dp"
        app:cardBackgroundColor="@color/card_episodes">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imgEpisode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_rick"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/nameEpisode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/imgEpisode"
                android:text="@string/name"
                android:textSize="14sp"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@+id/imgEpisode"
                android:layout_marginStart="12dp"/>

            <TextView
                android:id="@+id/nameEpisodeDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/nameEpisode"
                tools:text="Testicle Monster Dimension"
                app:layout_constraintStart_toEndOf="@+id/imgEpisode"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginStart="12dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/airDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/imgEpisode"
                android:text="@string/air_date"
                android:textSize="14sp"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/nameEpisodeDetail"
                android:layout_marginStart="12dp"/>

            <TextView
                android:id="@+id/airDateDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/airDate"
                tools:text="Testicle Monster Dimension"
                app:layout_constraintStart_toEndOf="@+id/imgEpisode"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginStart="12dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/episodeSE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/imgEpisode"
                android:text="@string/episode"
                android:textSize="14sp"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/airDateDetail"
                android:layout_marginStart="12dp"/>

            <TextView
                android:id="@+id/episodeSEDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/episodeSE"
                tools:text="Testicle Monster Dimension"
                app:layout_constraintStart_toEndOf="@+id/imgEpisode"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginStart="12dp"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_chevron"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>